<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#fff"
    tools:context=".Activity.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Topik Jurnal"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textStyle="bold"
            android:textColor="#272727"
            android:layout_marginTop="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            app:cardCornerRadius="15dp"
            android:layout_marginTop="20dp">

            <RelativeLayout
                android:id="@+id/Button_id_jurnal_01"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/cardview_dark_background"
                android:padding="10dp">

                <TextView
                    android:id="@+id/dadsda"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Cerita Kesehatan"
                    android:textColor="#FFFFFFFF"
                    android:textSize="17dp" />

                <TextView
                    android:layout_width="195dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/dadsda"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="3dp"
                    android:text="Apa kabar? bagaimana kisah menarik yang terjadi dalam hidupmu hari ini"
                    android:textColor="#FFFFFFFF"
                    android:textSize="10sp" />


                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:layout_alignParentRight="true"
                    android:maxHeight="100dp"
                    android:src="@drawable/arrow_bottom" />


            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            app:cardCornerRadius="15dp"
            android:layout_marginTop="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/cardview_dark_background"
                android:padding="10dp">

                <TextView
                    android:id="@+id/coa11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kenali diri Lebih baik"
                    android:textSize="17dp"
                    android:textColor="#FFFFFFFF"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"/>
                <TextView
                    android:layout_width="195dp"
                    android:layout_height="wrap_content"
                    android:text="Cruahkan segala perasaan yang kamu rasakan dalam diri"
                    android:layout_below="@+id/coa11"
                    android:textSize="10sp"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="#FFFFFFFF"/>



                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:maxHeight="100dp"
                    android:src="@drawable/arrow_bottom"
                    android:layout_alignParentRight="true"
                    />



            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            app:cardCornerRadius="15dp"
            android:layout_marginTop="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/cardview_dark_background"
                android:padding="10dp">

                <TextView
                    android:id="@+id/xcx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Menjalanin Relasi"
                    android:textSize="17dp"
                    android:textColor="#FFFFFFFF"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"/>
                <TextView
                    android:layout_width="195dp"
                    android:layout_height="wrap_content"
                    android:text="Ceritakan setiap pengalaman berkesanmu dengan oranng lain"
                    android:layout_below="@+id/xcx"
                    android:textSize="10dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="#FFFFFFFF"/>



                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:maxHeight="100dp"
                    android:src="@drawable/arrow_bottom"
                    android:layout_alignParentRight="true"
                    />



            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            app:cardCornerRadius="15dp"
            android:layout_marginTop="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/cardview_dark_background"
                android:padding="10dp">

                <TextView
                    android:id="@+id/Title1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Membangun keberanian"
                    android:textSize="17dp"
                    android:textColor="#FFFFFFFF"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"/>
                <TextView
                    android:layout_width="195dp"
                    android:layout_height="wrap_content"
                    android:text="Terus melangkh dan percaya diri hadapi setiap tantangan"
                    android:layout_below="@id/Title1"
                    android:textSize="10dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="#FFFFFFFF"/>



                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:maxHeight="100dp"
                    android:src="@drawable/arrow_bottom"
                    android:layout_alignParentRight="true"
                    />



            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>


</LinearLayout>